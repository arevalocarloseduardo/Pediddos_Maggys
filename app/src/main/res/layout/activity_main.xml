<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <HorizontalScrollView android:layout_width="match_parent"
                                  android:layout_height="match_parent" android:id="@+id/horizontalScrollView"
            >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">


                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">

                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
                                    android:id="@+id/imageView1" android:layout_weight="1"
                                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            <Button
                                    android:text="Agregar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/btn_agregar1"
                                    android:layout_weight="1"
                                    style="@android:style/Widget.Material.Button.Inset"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/et_cant1"
                                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
                            <EditText
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/et_cant1" android:layout_weight="1" android:hint="1"
                                    android:layout_width="35dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/btn_agregar1"
                                    app:layout_constraintEnd_toStartOf="@+id/cb_llevar1"
                                    android:layout_marginBottom="9dp"/>
                            <CheckBox
                                    android:text="LLevar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/cb_llevar1"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="16dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/et_cant1" android:layout_marginEnd="101dp"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                        </android.support.constraint.ConstraintLayout>
                    </FrameLayout>
                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">

                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp" app:srcCompat="@drawable/imagen4"
                                    android:id="@+id/imageView2" android:layout_weight="1"
                                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            <Button
                                    android:text="Agregar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/btn_agregar2"
                                    android:layout_weight="1"
                                    style="@android:style/Widget.Material.Button.Inset"
                                    app:layout_constraintEnd_toStartOf="@+id/et_cant2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="@+id/et_cant2"/>
                            <EditText
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/et_cant2" android:layout_weight="1" android:hint="1"
                                    android:layout_width="35dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/btn_agregar2"
                                    app:layout_constraintEnd_toStartOf="@+id/cb_llevar2"
                                    android:layout_marginBottom="9dp"/>
                            <CheckBox
                                    android:text="LLevar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/cb_llevar2"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="16dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/et_cant2" android:layout_marginEnd="101dp"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                        </android.support.constraint.ConstraintLayout>
                    </FrameLayout>
                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">

                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp" app:srcCompat="@drawable/imagen2"
                                    android:id="@+id/imageView3" android:layout_weight="1"
                                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            <Button
                                    android:text="Agregar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/btn_agregar3"
                                    android:layout_weight="1"
                                    style="@android:style/Widget.Material.Button.Inset"
                                    app:layout_constraintEnd_toStartOf="@+id/et_cant3"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="@+id/et_cant3"/>
                            <EditText
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/et_cant3" android:layout_weight="1" android:hint="1"
                                    android:layout_width="35dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/btn_agregar3"
                                    app:layout_constraintEnd_toStartOf="@+id/cb_llevar3"
                                    android:layout_marginBottom="9dp"/>
                            <CheckBox
                                    android:text="LLevar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/cb_llevar3"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="16dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/et_cant3" android:layout_marginEnd="101dp"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                        </android.support.constraint.ConstraintLayout>
                    </FrameLayout>
                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">

                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp" app:srcCompat="@drawable/imagen5"
                                    android:id="@+id/imageView4" android:layout_weight="1"
                                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            <Button
                                    android:text="Agregar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/btn_agregar4"
                                    android:layout_weight="1"
                                    style="@android:style/Widget.Material.Button.Inset"
                                    app:layout_constraintEnd_toStartOf="@+id/et_cant4"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="@+id/et_cant4"/>
                            <EditText
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/et_cant4" android:layout_weight="1" android:hint="1"
                                    android:layout_width="35dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/btn_agregar4"
                                    app:layout_constraintEnd_toStartOf="@+id/cb_llevar4"
                                    android:layout_marginBottom="9dp"/>
                            <CheckBox
                                    android:text="LLevar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/cb_llevar4"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="16dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/et_cant4" android:layout_marginEnd="101dp"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                        </android.support.constraint.ConstraintLayout>
                    </FrameLayout>
                    <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1">

                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="300dp" app:srcCompat="@drawable/imagen1"
                                    android:id="@+id/imageView5" android:layout_weight="1"/>
                            <Button
                                    android:text="Agregar"
                                    android:layout_width="89dp"
                                    android:layout_height="43dp" android:id="@+id/btn_agregar5"
                                    android:layout_weight="1"
                                    style="@android:style/Widget.Material.Button.Inset"
                                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            />
                            <EditText
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/et_cant5" android:layout_weight="1" android:hint="1"
                                    android:layout_width="35dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/btn_agregar5"
                                    app:layout_constraintEnd_toStartOf="@+id/cb_llevar5"
                                    android:layout_marginBottom="9dp"/>
                            <CheckBox
                                    android:text="LLevar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/cb_llevar5"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="9dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="101dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/et_cant5"
                                    app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="8dp"/>
                        </android.support.constraint.ConstraintLayout>
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ListView
                        android:layout_width="0dp"
                        android:layout_height="193dp"
                        android:id="@+id/listaView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0">
                </ListView>
                <EditText
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etNombre"
                        android:hint="Nombre"
                        app:layout_constraintTop_toBottomOf="@+id/listaView"
                        app:layout_constraintStart_toStartOf="parent"
                />
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/etTel" android:hint="Telefono" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/etNombre"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toBottomOf="@+id/listaView"/>
                <Button
                        android:text="Enviar pedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnEnviar"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/etTel"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                />
                <TextView
                        android:text="$0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPrecio"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="36dp"/>
                <TextView
                        android:text="Total:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/btnEnviar"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/tvPrecio"
                        android:layout_marginEnd="8dp" android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>